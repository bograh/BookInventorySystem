@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IJSRuntime IJSRuntime

<PageTitle>@BookItem?.Title</PageTitle>

<h3>Book Details for "@BookItem?.Title"</h3>

@if (BookItem == null)
{
    <h3>Loading...</h3>
}
else
{
    <div class="row">
        <div class="col-6">
            <img style="width: 100%;" src="@BookItem?.ImageUrl" alt="@BookItem?.Title" />
        </div>
        <div class="col-6">
            <h3>
                <b>Author:</b> @BookItem?.Author<br>
                <b>Genre:</b> @BookItem?.Genre<br>
                <b>ISBN:</b> @BookItem?.ISBN<br>
                <b>Quantity:</b> @BookItem?.Qty<br>
            </h3>
            <div class="row">
                <div class="col-sm">
                    @if (BookItem != null)
                    {
                        <NavLink class="nav-link" href='@($"editBook/{BookItem.Id}")'>
                            <button class="btn btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                    <path
                                        d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                                </svg> Edit
                            </button>
                        </NavLink>
                    }
                </div>
                <div class="col-sm">
                    <button class="btn btn-danger" @onclick="DeleteBook">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-trash3-fill" viewBox="0 0 16 16">
                            <path
                                d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                        </svg> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }
    private BookRecord? BookItem { get; set; }
    public IJSRuntime? JSRuntime { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(1000);
        BookItem = await Http.GetFromJsonAsync<BookRecord>($"/books/{Id}");
    }

    private async Task DeleteBook()
    {
        var response = await Http.DeleteAsync($"/books/{Id}");

        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("/");
        }
        else
        {
            // Error! Show error message
            if (JSRuntime != null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Error occurred while deleting the book.");
            }
        }

    }
}